<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:background="@color/green4"
        android:contentDescription="background_green_start"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/start_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/app_logo"
            android:contentDescription="start_app_logo"/>

        <ImageView
            android:id="@+id/start_text"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:src="@drawable/app_name_white"
            android:contentDescription="start_app_text"/>
    </LinearLayout>

</RelativeLayout>